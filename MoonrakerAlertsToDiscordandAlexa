          camera.neptune_max_thumbnail
        {% else %}
          camera.neptune_max_webcam
        {% endif %}
    data:
      filename: /config/www/3dprinter_snapshot.jpg
    action: camera.snapshot
  - delay: "00:00:02"
  - data_template:
      message: |-
        {% if trigger.id == 'paused' %}
